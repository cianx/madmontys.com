{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "files": {
    "ignore": [".cache", "build", "node_modules"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "globals": []
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  }
}
